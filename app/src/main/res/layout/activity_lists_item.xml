<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="189dp"
    app:cardBackgroundColor="@color/slider_card_color"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@color/black_coffee"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="124dp"
            android:layout_height="189dp"
            android:src="@drawable/placeholder_image"
            android:adjustViewBounds="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/list_title_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:text="@string/list_name"
                android:layout_marginTop="20dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_title_ph"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/list_author_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/list_title"
                android:text="@string/list_author"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/list_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_author_ph"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/list_total_movies_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/list_total_movies"
                android:layout_marginTop="20dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/list_total_movies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_total_movies_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/list_total_tvs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/list_total_movies"
                android:text="@string/list_total_tv"
                android:layout_marginTop="5dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/list_total_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_total_tvs_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>