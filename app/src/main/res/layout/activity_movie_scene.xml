<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".scenes.activities.MovieScene">
    <ImageView
        android:id="@+id/movie_imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/movie_scene_background"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/movie_overlay_color">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top">

            <ImageView
                android:id="@+id/m_img"
                android:layout_width="220dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:background="#2d2d2d" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gradient_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/m_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/white"
                android:layout_below="@+id/m_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <TextView
                android:id="@+id/m_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:layout_below="@+id/m_title"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white" />
            <RelativeLayout
                android:id="@+id/icon_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_below="@+id/m_date">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/movie_favorite_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/favorite_icon_border"
                    android:layout_marginEnd="15dp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/movie_watchlist_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/watchlist_icon_border"
                    android:layout_toEndOf="@+id/movie_favorite_icon"
                    android:scaleType="fitXY"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/movie_addtolist_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/movie_watchlist_icon"
                    android:text="Add to list"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/m_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_wrapper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/lorem"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white" />

            <RelativeLayout
                android:id="@+id/m_slider_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/m_overview"
                android:padding="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/m_person_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <TextView
                android:id="@+id/review_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_slider_wrapper"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/reviews_heading"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/new_review_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review_heading"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="New Review" />


            <RelativeLayout
                android:id="@+id/review_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/new_review_btn"
                android:padding="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/review_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/m_streaming_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_slider_wrapper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Streaming on"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/m_streaming_on_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_streaming_on"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/m_s_hbo_logo"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hbologo"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/m_s_netflix_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/netflixlogo"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/m_s_disneyplus_logo"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/disneypluslogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_s_viaplay_logo"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/viaplaylogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_s_strim_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/strimlogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_s_googleplay_logo"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/googleplaylogo2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_s_itunes_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ituneslogo"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/m_rent_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/m_streaming_on_wrapper"
                android:layout_centerHorizontal="true"
                android:text="Rent on"
                android:visibility="gone"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/m_rent_on_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_rent_on"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/m_r_hbo_logo"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hbologo"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/m_r_netflix_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/netflixlogo"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/m_r_disneyplus_logo"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/disneypluslogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_r_viaplay_logo"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/viaplaylogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_r_strim_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/strimlogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_r_googleplay_logo"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/googleplaylogo2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_r_itunes_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ituneslogo"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/m_buy_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/m_rent_on_wrapper"
                android:layout_centerHorizontal="true"
                android:text="Buy on"
                android:visibility="gone"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/m_buy_on_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_buy_on"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/m_b_hbo_logo"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hbologo"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/m_b_netflix_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/netflixlogo"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/m_b_disneyplus_logo"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/disneypluslogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_b_viaplay_logo"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/viaplaylogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_b_strim_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/strimlogo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_b_googleplay_logo"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/googleplaylogo2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/m_b_itunes_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ituneslogo"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/snackbar_coordinatorayout" />

    <include layout="@layout/toolbar" />

    <include layout="@layout/nav_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>